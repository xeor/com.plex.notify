{
    "id": "com.plex.notify",
    "version": "1.0.2",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Plex Notify"
    },
    "description": {
        "en": "Trigger homey with Plex media players"
    },
    "category": "video",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "author": {
        "name": "Mark Swift",
        "email": "markaswift@gmail.com"
    },
    "flow": {
        "triggers": [{
            "id": "playing",
            "title": {
                "en": "Plex starts playing"
            },
            "hint": {
                "en": "Cards can use the following tokens. PLAYER: The player name as reported by Plex. USER: The username of the person playing the media. TITLE: The current title of the playing media, i.e. 'Ghostbusters'. TYPE: The type of media playing, available options are 'movie', 'show', 'track', 'picture'."
            },
            "tokens": [{
                "name": "type",
                "title": {
                    "en": "Type"
                },
                "example": {
                    "en": "Movie"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }, {
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }]
        }, {
            "id": "stopped",
            "title": {
                "en": "Plex stops playing"
            },
            "hint": {
                "en": "Cards can use the following tokens. PLAYER: The player name as reported by Plex. USER: The username of the person playing the media. TITLE: The current title of the playing media, i.e. 'Ghostbusters'. TYPE: The type of media playing, available options are 'movie', 'show', 'track', 'picture'."
            },
            "tokens": [{
                "name": "type",
                "title": {
                    "en": "Type"
                },
                "example": {
                    "en": "Movie"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }, {
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }]
        }, {
            "id": "paused",
            "title": {
                "en": "Plex pauses"
            },
            "hint": {
                "en": "Cards can use the following tokens. PLAYER: The player name as reported by Plex. USER: The username of the person playing the media. TITLE: The current title of the playing media, i.e. 'Ghostbusters'. TYPE: The type of media playing, available options are 'movie', 'show', 'track', 'picture'."
            },
            "tokens": [{
                "name": "type",
                "title": {
                    "en": "Type"
                },
                "example": {
                    "en": "Movie"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }, {
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }]
        }],
        "conditions": [{
            "id": "is_playing",
            "title": {
                "en": "!{{Is playing|Is not playing}}"
            },
            "hint": {
                "en": "Cards can use the following tokens. PLAYER: The player name as reported by Plex."
            },
            "args": [{
                "name": "player",
                "type": "text",
                "placeholder": {
                    "en": "Player name"
                }
            }]
        }, {
            "id": "is_paused",
            "title": {
                "en": "!{{Is paused|Is not paused}}"
            },
            "hint": {
                "en": "Cards can use the following tokens. PLAYER: The player name as reported by Plex."
            },
            "args": [{
                "name": "player",
                "type": "text",
                "placeholder": {
                    "en": "Player name"
                }
            }]
        }]
    }
}
