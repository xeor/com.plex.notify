{
    "id": "com.plex.notify",
    "version": "1.0.0",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Plex Notify"
    },
    "description": {
        "en": "Trigger homey with Plex media players"
    },
    "category": "video",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "author": {
        "name": "Mark Swift",
        "email": "markaswift@gmail.com"
    },
    "flow": {
        "triggers": [{
            "id": "playing",
            "title": {
                "en": "Plex starts playing"
            },
            "tokens": [{
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }]
        }, {
            "id": "stopped",
            "title": {
                "en": "Plex stops playing"
            },
            "tokens": [{
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }]
        }, {
            "id": "paused",
            "title": {
                "en": "Plex pauses"
            },
            "tokens": [{
                "name": "player",
                "title": {
                    "en": "Player"
                },
                "example": {
                    "en": "Rasplex"
                }
            }, {
                "name": "title",
                "title": {
                    "en": "Title"
                },
                "example": {
                    "en": "Ghostbusters"
                }
            }, {
                "name": "user",
                "title": {
                    "en": "User"
                },
                "example": {
                    "en": "Mark & Lina"
                }
            }]
        }]
    }
}
